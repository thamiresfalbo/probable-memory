<!DOCTYPE html>
<html>
  <head>
    <title>Probable Memory</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <div class="navbar">
	<div class="navbar-begin">
            <div class="navbar-item">
		<h3 class="title is-3"><%= link_to 'Probable Memory',root_path  %></h3>
            </div>
      </div>
      <div class="navbar-end">
        <div class="buttons">
          <% if current_user %>
            <%= link_to 'Edit Profile', edit_user_path(current_user.id), class: "button is-primary" %>
            <%= link_to 'Logout', :logout, method: :post, class: "button is-primary" %>
          <% else %>
            <%= link_to 'Register', new_user_path, class: "button is-primary"  %>
            <%= link_to 'Login', :login, class: "button is-primary"  %>
          <% end %>
        </div>
      </div>
    </div>
    <section class="section">
      <p id="notice"><%= flash[:notice] %></p>
      <p id="alert"><%= flash[:alert] %></p>
      <%= yield %>
    </section>
  </body>
</html>
